.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
}

/* 订单状态 */
.status-section {
  background: #3cc51f;
  color: #fff;
  padding: 40rpx 30rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
}

/* 商品信息 */
.book-section {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  display: flex;
}

.book-cover {
  width: 160rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.book-author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.book-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.campus, .condition {
  margin-right: 20rpx;
}

.price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 24rpx;
}

/* 订单信息和收货信息 */
.order-section, .delivery-section {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
}

.label {
  width: 140rpx;
  color: #666;
  font-size: 26rpx;
}

.value {
  flex: 1;
  font-size: 26rpx;
}

.copy {
  color: #3cc51f;
  font-size: 24rpx;
  margin-left: 20rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn {
  margin-left: 20rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #3cc51f;
  color: #fff;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  color: #999;
  font-size: 28rpx;
} 