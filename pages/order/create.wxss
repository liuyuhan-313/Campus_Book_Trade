.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.book-info {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  margin-bottom: 20rpx;
}

.book-cover {
  width: 160rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.book-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.form-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.total-price {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
} 