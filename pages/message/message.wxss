.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.message-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #3cc51f;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #3cc51f;
  border-radius: 2rpx;
}

.message-list {
  background: #f5f5f5;
  padding: 0;
}

.message-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: flex-start;
  position: relative;
  border-radius: 16rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  min-height: 140rpx;
}

.message-item:active {
  background: #f8f8f8;
}

.content {
  flex: 1;
  overflow: hidden;
  padding-right: 160rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 20rpx;
}

.time {
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  z-index: 1;
}

.book-info {
  margin-bottom: 8rpx;
}

.book-title {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.message {
  font-size: 28rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
  line-height: 1.5;
  word-break: break-all;
  min-height: 44rpx;
}

.badge {
  position: absolute;
  top: 60rpx;
  right: 20rpx;
  background: #ff4757;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
  font-weight: 600;
}

.system-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.status {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #3cc51f;
  margin-left: 20rpx;
}

.status.read {
  background: #999;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

