.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.book-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.book-item {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.book-image {
  width: 180rpx;
  height: 240rpx;
  border-radius: 8rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
  object-fit: cover;
}

.book-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.book-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.book-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.book-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.book-status.on-sale {
  background: #e6f7ff;
  color: #1890ff;
}

.book-status.sold {
  background: #f5f5f5;
  color: #999;
}

.book-status.refunding {
  background: #fff2e8;
  color: #fa8c16;
}

.book-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-left: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin: 0;
  min-width: 80rpx;
  width: 60rpx;
  text-align: center;
}

.action-btn.edit {
  background: #1890ff;
  color: #fff;
}

.action-btn.delete {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.action-btn.approve {
  background: #52c41a;
  color: #fff;
}

.action-btn.contact {
  background: #faad14;
  color: #fff;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.publish-btn {
  background: #1890ff;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
}

/* 编辑弹窗样式 */
.edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: bold;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-item input,
.form-item textarea {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 10rpx;
  font-size: 28rpx;
}

.form-item textarea {
  height: 200rpx;
}

.form-item .picker {
  width: 100%;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: #fff;
}

.save-btn {
  background: #1890ff;
  color: #fff;
  margin-top: 30rpx;
  border-radius: 8rpx;
} 