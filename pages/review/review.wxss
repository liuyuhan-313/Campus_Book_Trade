.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.rating-section {
  margin-bottom: 40rpx;
}

.content-section {
  margin-bottom: 40rpx;
}

.review-content {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}

.rating-content {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.rating-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.rating-stars {
  margin-bottom: 30rpx;
}

.star-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.star-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.stars {
  display: flex;
  gap: 10rpx;
}

.star {
  width: 40rpx;
  height: 40rpx;
  padding: 5rpx;
}

.rating-text {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.rating-comment {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

.rating-btns {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.rating-btns .btn {
  flex: 1;
  max-width: 200rpx;
  margin: 0;
}

.btn {
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  border: none;
}

.btn-default {
  background: #f5f5f5;
  color: #666;
}

.btn-primary {
  background: #07c160;
  color: #fff;
} 