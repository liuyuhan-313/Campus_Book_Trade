.container {
  padding: 20rpx;
}

/* 排序栏 */
.sort-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.sort-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 28rpx;
  color: var(--text-color-gray);
}

.sort-item.active {
  color: var(--primary-color);
}

.sort-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

/* 书籍列表 */
.book-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.book-item {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  position: relative;
}

.book-cover {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.book-author {
  font-size: 24rpx;
  color: var(--text-color-gray);
  margin-bottom: 12rpx;
}

.book-meta {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.campus, .condition {
  font-size: 22rpx;
  color: var(--text-color-gray);
  background: var(--bg-color);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.book-price-row {
  display: flex;
  align-items: baseline;
}

.price {
  color: var(--danger-color);
  font-size: 32rpx;
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
}

.original-price {
  margin-left: 12rpx;
  color: var(--text-color-gray);
  text-decoration: line-through;
  font-size: 24rpx;
}

.collect-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  font-size: 28rpx;
  color: var(--text-color-gray);
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 30rpx;
  color: var(--text-color-gray);
  font-size: 24rpx;
} 